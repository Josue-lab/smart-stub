{
  "swagger": "2.0",
  "info": {},
  "basePath": "/identity",
  "paths": {
    "/tokens": {
      "post": {
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "body for tokens",
            "required": true,
            "schema": {
              "$ref": "#/definitions/tokensRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "successful operation",
            "required": true,
            "schema": {
                "$ref": "#/definitions/tokensResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "tokensRequest": {
      "type": "object",
      "properties": {
        "grant_type": {
          "type": "string",
          "enum" : ["password", "refresh_token", "TOKEN"]
        },
        "credential_type": {
          "type": "string",
          "enum" : ["EMAIL_PASSWORD", "SOCIAL", "TMG"]
        },
        "identifier": {
          "type": "string",
          "format": "email"
        },
        "auth_key": {
          "type": "string",
          "format": "password"
        },
        "client_id": {
          "type": "string"
        },
        "remember_me": {
          "type": "boolean"
        }
      }
    },
    "tokensResponse": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string"
        },
        "token_type": {
          "type": "string"
        },
        "refresh_token": {
          "type": "string"
        },
        "expires_in": {
          "type": "integer"
        },
        "id_token": {
          "type": "string"
        }
      }
    }
  }
}